{
  "manifest_version": 3,
  "name": "Simple Color Mixer: Pro RGB & HEX Tool",
  "short_name": "Color Mixer",
  "version": "1.0.1",
  "description": "The fastest, 100% offline color mixer for designers. Mix RGB, generate HEX codes, and save palettes instantly.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["storage"],
  "offline_enabled": true
}